# AURA 2.0 - Environment Variables Example
# Copy this file to .env and fill with your values

# Application
NODE_ENV=development
APP_NAME=AURA
APP_VERSION=2.0.0
PORT=3000
API_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3001

# Database
DATABASE_URL=postgresql://aura:password@localhost:5432/aura_db
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=aura_db
DATABASE_USER=aura
DATABASE_PASSWORD=your-secure-password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ElasticSearch
ELASTIC_URL=http://localhost:9200
ELASTIC_USER=elastic
ELASTIC_PASSWORD=your-elastic-password

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# AWS
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=aura-media

# Azure (Alternative)
AZURE_STORAGE_ACCOUNT=aurastorage
AZURE_STORAGE_KEY=your-azure-key
AZURE_CONTAINER_NAME=media

# Stripe
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@aura.app
SENDGRID_FROM_NAME=AURA

# Twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# OneSignal
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_REST_API_KEY=your-onesignal-api-key

# Social OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY=your-apple-private-key

# Instagram
INSTAGRAM_CLIENT_ID=your-instagram-client-id
INSTAGRAM_CLIENT_SECRET=your-instagram-client-secret

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret

# Spotify
SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

# Azure Cognitive Services
AZURE_COGNITIVE_KEY=your-azure-cognitive-key
AZURE_COGNITIVE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-key
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Security
ENCRYPTION_KEY=your-256-bit-encryption-key
CSRF_SECRET=your-csrf-secret
CORS_ORIGIN=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Feature Flags
FEATURE_FLASH_MODE=true
FEATURE_ALMA_MODE=true
FEATURE_AURA_MODE=true
FEATURE_RADAR_MODE=true
FEATURE_VIBE_MODE=true
FEATURE_VIDEO_CHAT=true
FEATURE_AI_MODERATION=true

# Limits
MAX_PHOTO_UPLOAD_SIZE_MB=10
MAX_VIDEO_UPLOAD_SIZE_MB=100
MAX_PHOTOS_PER_USER=9
MAX_VIDEO_LENGTH_SECONDS=30
FREE_DAILY_LIKES=10
FREE_DAILY_SUPER_LIKES=1